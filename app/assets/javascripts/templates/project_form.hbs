{{#if errors}}
<ul class="alert alert-danger col-md-2" id="project-errors">
  {{#each errors}}
    <li>{{this.name}}</li>
  {{/each}}
</ul>
{{/if}}


<div class="clear"></div>

{{input  value=name type="text" class="form-control input-lg" placeholder="Project name..." on="keyDown"}}

<button {{action 'save'}} class="btn btn-success btn-lg">
  <span class="glyphicon glyphicon-ok-sign"></span>Save
</button>